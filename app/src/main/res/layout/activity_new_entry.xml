<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewEntryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/new_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/new_toolbar_bottom"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/new_toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_action_bar_splitter">

        <ImageButton
            android:id="@+id/new_btn_info"
            android:layout_gravity="left"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_preview"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/new_btn_location"
            android:layout_marginLeft="60dp"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_location"
            android:background="@null" />

        <ImageButton
            android:id="@+id/new_btn_picture"
            android:layout_marginLeft="120dp"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_camera"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/new_btn_send"
            android:layout_gravity="right"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_send"
            android:background="@null"/>
    </FrameLayout>
</RelativeLayout>