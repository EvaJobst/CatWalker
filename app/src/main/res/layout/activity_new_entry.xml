<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.fhhgb.catwalker.NewEntryActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/new_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/new_toolbar_bottom"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/new_toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_action_bar_splitter">

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:padding="0dp"
            android:layout_gravity="left|bottom"
            android:id="@+id/new_toolbar_left" />

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_toolbar_right"
            android:layout_gravity="right|bottom" />
    </FrameLayout>
</RelativeLayout>
